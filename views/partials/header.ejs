<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body>
    <header class="bg-[#648499] bg-opacity-70">
      <nav class="mx-auto flex w-[92%] items-center justify-between">
        <div>
          <img
            class="m-2 h-14 w-14 rounded-full"
            src="images/cloud.jpg"
            alt="Cloud logo"
          />
        </div>
        <div
          class="nav-links border-1 absolute left-0 top-[-100%] flex w-full items-center justify-center rounded-b-lg bg-none px-5 py-6 text-white filter backdrop-blur-md duration-500 md:static md:min-h-fit md:w-auto md:scale-100 md:rounded-lg md:border-0 md:p-2 md:duration-500"
        >
          <ul
            class="flex flex-col items-center gap-8 md:flex-row md:items-center md:gap-[5vw]"
          >
            <li>
              <a class="rounded-lg bg-slate-900 p-2 hover:bg-slate-600" href=""
                >Home</a
              >
            </li>
            <li>
              <a class="rounded-lg bg-slate-900 p-2 hover:bg-slate-600" href=""
                >Dashboard</a
              >
            </li>
            <li>
              <a class="rounded-lg bg-slate-900 p-2 hover:bg-slate-600" href=""
                >Pricing</a
              >
            </li>
          </ul>
        </div>
        <div class="flex items-center gap-6">
          <button
            class="my-1 rounded-full bg-slate-900 px-5 py-2 text-white hover:bg-slate-600"
          >
            Sign In
          </button>
          <ion-icon
            onclick="onToggleMenu(this)"
            class="cursor-pointer text-3xl md:hidden"
            name="menu"
          ></ion-icon>
        </div>
      </nav>
    </header>
    <script>
      const navLinks = document.querySelector(".nav-links");
      function onToggleMenu(e) {
        e.name = e.name === "menu" ? "close" : "menu";
        navLinks.classList.toggle("top-[70px]");
        navLinks.classList.toggle("bg-slate-300");
        navLinks.classList.toggle("bg-opacity-10");
      }
    </script>
  </body>
</html>
