<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/output.css" />
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
  </head>
  <body
    class="font-body z-[1] min-h-[100vh] bg-[url('/images/bgFields.jpeg')] bg-cover bg-no-repeat"
  >
    <%- include("./partials/header.ejs")%>
    <div>
      <div
        class="z-[2] mx-auto mb-3 mt-10 flex max-h-max max-w-max flex-col rounded-xl bg-[url('/images/sunbg.jpg')] bg-auto bg-right p-5 text-white"
      >
        <div class="mr-24 flex flex-col p-5 pt-5">
          <div class="text-4xl">Monday</div>
          <div class="text-base font-thin">14 Oct 2024</div>
          <div class="text-xl font-thin">Southampton</div>
        </div>
        <div class="flex items-center p-5">
          <img
            class="h-16 animate-slow-grow-shrink"
            src="/images/sunicon.png"
            alt="Sun"
          />
        </div>
        <div class="mr-24 flex max-h-max max-w-max flex-col p-5 pt-5">
          <div class="text-3xl">10&deg;C</div>
          <div class="text-xl font-thin">Scattered clouds</div>
        </div>
      </div>
      <div class="search flex items-center justify-center">
        <div>
          <form class="200 shadow-2xl" action="Search" method="post">
            <input
              class="rounded-lg bg-white bg-opacity-35 p-2 text-white placeholder-white outline-none"
              type="text"
              placeholder="Enter a city..."
            />
            <button class="rounded-lg bg-slate-900 p-2 text-white">Go</button>
          </form>
        </div>
      </div>
    </div>
    <%- include("./partials/footer.ejs")%>
  </body>
</html>
